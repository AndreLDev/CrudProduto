@model IEnumerable<CrudProduto.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Produto</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table" id="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCategoriaNavigation.Categoria)
            </th>
            <th>
                Fornecedor
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.IdCategoriaNavigation.Categoria)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.IdFornecedorNavigation.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Idproduto">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Idproduto">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Idproduto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
